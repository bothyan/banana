
/* 小组内容列表 */
.group-list{
    padding-top:40rpx;
    overflow: hidden;
}
.group-list .li{
    width:340rpx;
    float:left;
    position:relative;
    display:inline;
    margin-bottom:24rpx;
}
.group-list .li:nth-child(odd){
    margin-right:23rpx;
}
.group-list .li .add{
    width:44rpx;
    height:44rpx;
    position:absolute;
    top:280rpx;
    right:16rpx;
}
.group-list .li .name{
    position:absolute;
    top:0;
    left:0;
    width:320rpx;
    background:rgba(0,0,0,0.4);
    font-size:32rpx;
    color:#fff;
    text-align:left;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
    padding:5rpx 10rpx;
}
.group-list .li .pic{
    width:340rpx;
    height:340rpx;
}
.group-list .li .title{
    font-size:28rpx;
    color:#333;
    margin-top:10rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
    height:76rpx;
}   
.group-list .time-box{
    height:60rpx;
    line-height:60rpx;
    margin-top:10rpx;
}
.group-list .time-box .timeicon{
    width:60rpx;
    height:60rpx;
    float:left;
}
.group-list .time-box .time{
    color:#666;
    font-size:24rpx;    
    display:inline-block;
    float:left;
    margin-left:10rpx;
}

/* 活动内容列表 */

.active-list{
    overflow: hidden;
}
.active-list .li{
    width:100%;
    position:relative;
    padding:35rpx 0;
    border-bottom:2rpx solid #f5f5f5;
}
.active-list .like{
    width:44rpx;
    height:44rpx;
    position:absolute;
    top:38rpx;
    right:3rpx;
}
.active-list .time-word{
    width:600rpx;
    height:175rpx;
}
.active-list .time{
    float:left;
    height:173rpx;
    width:116rpx;
    border:2rpx solid #333333;
    color:#333;
    text-align:center;
}
.active-list .month{
    margin-top:5rpx;
}
.active-list .month,.active-list .hour{
    font-size:28rpx;
    display:block;
}
.active-list .day{
    font-size:60rpx;
    display:block;
}
.active-list .title-name{
    margin-left:40rpx;
    width:440rpx;
    float:left;
}
.active-list .title-name .title{
    text-align:left;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
    font-size:40rpx;
    color:#333;
}
.active-list .title-name .name{
    overflow: hidden;
    text-overflow:ellipsis;
    word-break: break-all;
    color:#999;
    font-size:32rpx;
    margin-top:30rpx;
}
.active-list .address{
    overflow: hidden;
    text-overflow:ellipsis;
    word-break: break-all;
    color:#333;
    font-size:32rpx;
    margin-top:30rpx;
}
.active-list .persons{
    height:75rpx;
    line-height:75rpx;
    color:#333;
    font-size:32rpx;
    margin-top:30rpx;
}
.active-list .persons .num{
    margin-right:40rpx;
    display:inline-block;
    float:left;
}
.active-list .persons image{
    height:75rpx;
    width:75rpx;
    margin-right:5rpx;
    display:inline-block;
    float:left;
}
.active-list .persons .dian{
    display:inline-block;
    float:left;
    color:#999;
    font-size:40rpx;
}
