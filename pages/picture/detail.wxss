.content{
    background:#e0e7ef;
    position:fixed;
    width:100%;
    height:100%;
    top:0;
    left:0;
    display: flex;
    flex-direction: row;
    align-items:center;
}
.content image{
    width:100%;
}
.msg{
    position:fixed;
    height:124rpx;
    line-height:124rpx;
    bottom:0;
    left:0;
    width:100%;
    background:rgba(0,0,0,0.4);
    z-index:10;
}
.msg image{
    width:80rpx;
    height:80rpx;
    border-radius:100%;
    display:block;
    float:left;
    margin-left:40rpx;
    margin-top:22rpx;
}
.msg text{
    height:80rpx;
    display:inline-block;
    float:left;
    line-height:80rpx;
    margin-top:22rpx;
} 
.msg .name{
    font-size:32rpx;
    color:#fff;
    margin-left:24rpx;
}
.msg .time{
    font-size:24rpx;
    color:#fff;
    margin-left:16rpx;
}