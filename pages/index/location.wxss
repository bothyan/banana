
.top{
    padding:24rpx;
    background:#f5f5f5;
}
.top .title{
    color:#666;
    font-size:32rpx;
}
.top .loca{
    background:#ffffff;
    padding:0 40rpx;
    display:inline-block;
    height:70rpx;
    line-height:70rpx;
    margin-top:20rpx;
}
.top .icon{
    width:36rpx;
    height:36rpx;
    display:inline-block;
    margin-top:18rpx;
    float:left;
}
.top .city{
    display:inline-block;
    float:left;
    color:#666;
    height:70rpx;
    line-height:70rpx;
    font-size:32rpx;
    margin-left:5rpx;
}

/* 地址列表 */
.address-list{
    padding:0 24rpx;
}

.address-list .clist{
    padding:20rpx 0;
    color:#333;
    font-size:32rpx;    
    color:#666;
    border-bottom:2rpx solid #f5f5f5;
}
.address-list .clist image{
    width:36rpx;
    height:36rpx;
    float:right;
}