/*首页顶部*/
.top{
	height:80rpx;
	font-size:28rpx;
	padding:0 20rpx;
}
.top .left{
	display: block;
	float:left;
	color:#666;
	line-height:80rpx;
}
.top .left .location{
	display: block;
	float:left;
}
.top .left image{ 
	width:28rpx;
	height:28rpx;
	margin-left:10rpx;

}
.top .searchbox{
	display: block;
	float:left;
	margin-left:20rpx;
	width:440rpx;
	height:55rpx;
	background:#ebebeb;
	margin-top:12rpx;
	border-radius:5rpx;
}
.top .searchbox image{
	width:36rpx;
	margin-left:20rpx;
	height:36rpx;
	margin-top:10rpx;
	float:left;
}
.top .searchbox .tips{
	color:#999;
	margin-left:20rpx;
	line-height:55rpx;
	height:55rpx;
	display: block;
	float:left;
}
.top .creat{
	display: block;
	float:left;
	color:#f38200;
	float:right;
	line-height:80rpx;
}

/*滚动图*/

.banner{
  width: 750rpx;
  height: 324rpx;
  background-color: #fff;
}

.banner image {
  width: 750rpx;
  height: 324rpx;
}

/*中前部导航*/
.navs{
	margin:40rpx auto 0;
	width:710rpx;
	padding:0 20rpx;
	overflow: hidden;
	padding-bottom:40rpx;
	border-bottom:2px solid #f5f5f5;
}
.navs .nav{
	float:left;
	width:128rpx;
	margin:0 24rpx;
	text-align:center;
}
.navs image{
	width:88rpx;
	height:88rpx;
	margin:0 auto;
	display:block;
}
.nav text{
	color:#333;
	font-size:28rpx;
}

/*中间模块*/
.panel{
	padding:40rpx 20rpx;
	border-bottom:2px solid #f5f5f5;
}
.panel .head{
	width:710rpx;
	color:#333;
	font-size:40rpx;	
}
.panel .head image{
	width:44rpx;
	height:44rpx;
	float:right;
}
.panel .box{
	width:710rpx;
	margin-top:20rpx;
	overflow-y:hidden;
	overflow-x:auto;

}
.panel .box .libox{
	
}
.panel .li{
	width:280rpx;
	margin-right:20rpx;
	position:relative;
	display:inline;
	float:left;
}
.panel .li .add{
	width:36rpx;
	height:36rpx;
	position:absolute;
	top:229rpx;
	right:15rpx;
}
.panel .li .name{
	position:absolute;
	top:0;
	left:0;
	width:260rpx;
	background:rgba(0,0,0,0.4);
	font-size:32rpx;
	color:#fff;
	text-align:left;
	display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
    padding:5rpx 10rpx;
}
.panel .li .pic{
	width:280rpx;
	height:280rpx;
}
.panel .li .title{
	font-size:28rpx;
	color:#333;
    margin-top:10rpx;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
    height:76rpx;
}	
.time-box{
	height:60rpx;
	line-height:60rpx;
	margin-top:10rpx;
}
.time-box .timeicon{
	width:60rpx;
	height:60rpx;
	float:left;
}
.time-box .time{
	color:#666;
	font-size:24rpx;	
	display:inline-block;
	float:left;
	margin-left:10rpx;
}
/*底部类型*/
.type {
	border:0;
	padding:40rpx 0 40rpx 20rpx;
	border-bottom:2px solid #f5f5f5;
	overflow:hidden;
}
.type .head{
	width:730rpx;
	color:#333;
	font-size:40rpx;	
}
.type .typeul{
	margin-top:20rpx;
}
.type .typeul text{
	width:224rpx;
	margin-right:16rpx;
	margin-top:16rpx;
	background:#333;
	text-align:center;
	float:left;
	height:126rpx;
	line-height:126rpx;
	color:#fff;
	font-size:32rpx;
	display:block;
}