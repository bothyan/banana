.refreshbox{
    width:160rpx;
    margin:20rpx auto;
    height:48rpx;
}
.refreshbox image{
    height:48rpx;
    width:48rpx;
    display:inline-block;
    float:left
}
.refreshbox text{
    height:48rpx;
    line-height:48rpx;
    color:#f38200;
    font-size:32rpx;
    display:inline-block;
    margin-left:10rpx;
    float:left;
}

.confirm{
    color:#333;
    font-size:32rpx;
    height:88rpx;
