.content{
    padding:24rpx 24rpx 40rpx;
    overflow:hidden;
}
.tag{
    color:#999;
    font-size:32rpx;
    padding:0 20rpx;
    border:2rpx solid #999;
    border-radius:40rpx;
    margin-right:20rpx;
    margin-bottom:20rpx;
    height:65rpx;
    line-height:65rpx;
    display:inline-block;
}
.tag.select{
    color:#333;
    font-size:32rpx;
    padding:0 20rpx;
    border:2rpx solid #333;
    border-radius:40rpx;
    margin-right:20rpx;
    margin-bottom:20rpx;
    height:65rpx;
