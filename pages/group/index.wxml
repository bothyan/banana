<view class="content">
    <view class="navbox">
        <view  wx:if="{{navArr[0]}}" bindtap="tapNav" data-index="0" class="nav select">
            <text>{{navWords[0]}}</text>
            <image src="../../images/arrow2.png"></image>               
        </view>
        <view wx:else class="nav" bindtap="tapNav" data-index="0">
            <text>{{navWords[0]}}</text>
            <image src="../../images/arrow1.png"></image>               
        </view>
        <view  wx:if="{{navArr[1]}}" class="nav select" bindtap="tapNav" data-index="1">
            <text>{{navWords[1]}}</text>
            <image src="../../images/arrow2.png"></image>               
        </view>
        <view  wx:else class="nav" bindtap="tapNav" data-index="1">
            <text>{{navWords[1]}}</text>
            <image src="../../images/arrow1.png"></image>               
        </view>
    </view>
    <view wx:if="{{navArr[0]}}">
        <view class="typelist1">
            <text wx:for="{{[1,2,3,4,5,6,7,8]}}" data-word="科技" bindtap="tapTypes1">科技</text>
        </view>
    </view>

    <view wx:if="{{navArr[1]}}">
        <view class="typelist2">
            <view wx:for="{{[1,2,3]}}" data-word="综合" bindtap="tapTypes2">综合</view>
        </view>
    </view>

    <view class="group-list">
        <view class="li" wx:for="{{[1,2,3,4,5,6,7,8]}}">
            <view class="name">这里是小组的名称这里是小组的名称这里是小组的名称这里是小组的名称这里是小组的名称</view>
            <image class="add" src="../../images/add_icon.png"></image>
            <image class="pic" src="../../images/banner.png"></image>
            <view class="title">这里是活动的这里是活动的标题标题</view>
            <view class="time-box">
                <image class="timeicon" src="../../images/time_icon.png"></image>
                <text class="time">2018-03-17</text>
            </view>    
        </view> 
    </view>
</view>