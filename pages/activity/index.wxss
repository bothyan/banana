/*首页顶部*/
.top{
    height:80rpx;
    font-size:28rpx;
    padding:0 20rpx;
}
.top .left{
    display: block;
    float:left;
    color:#666;
    line-height:80rpx;
}
.top .left .location{
    display: block;
    float:left;
}
.top .left image{ 
    width:28rpx;
    height:28rpx;
    margin-left:10rpx;

}
.top .searchbox{
    display: block;
    float:left;
    margin-left:20rpx;
    width:440rpx;
    height:55rpx;
    background:#ebebeb;
    margin-top:12rpx;
    border-radius:5rpx;
}
.top .searchbox image{
    width:36rpx;
    margin-left:20rpx;
    height:36rpx;
    margin-top:10rpx;
    float:left;
}
.top .searchbox .tips{
    color:#999;
    margin-left:20rpx;
    line-height:55rpx;
    height:55rpx;
    display: block;
    float:left;
}
.top .creat{
    display: block;
    float:left;
    color:#f38200;
    float:right;
    line-height:80rpx;
}

.content{
    padding:10rpx 24rpx 40rpx;
    position:relative;
    overflow:hidden;
}

/* 头部筛选 */
.navbox{
    height:78rpx;
}
.nav{
    width:234rpx;
    height:76rpx;
    border-bottom:2rpx solid #f5f5f5;
    line-height:76rpx;
    color:#666;
    font-size:28rpx;
    float:left;
    text-align:center;
}
.nav image{
    width:24rpx;
    height:24rpx;
    margin-left:10rpx;
}
.nav.select{
    color:#f38200;
    border-bottom:2rpx solid #f38200;
}
/*类型列表*/
.typelist1 {
    position:absolute;
    z-index:10;
    width:720rpx;
    left:15rpx;
    top:98rpx;
    padding-bottom:40rpx;
    background:#fff;
}
.typelist1 text{
    width:224rpx;
    margin:8rpx;
    background:#ffd73b;
    text-align:center;
    border-radius:60rpx;
    height:80rpx;
    float:left;
    line-height:80rpx;
    color:#333333;
    font-size:32rpx;
    display:block;
}
.typelist2{
    position:absolute;
    z-index:10;
    width:704rpx;
    left:23rpx;
    top:98rpx;
    padding-bottom:40rpx;
    background:#fff;
}
.typelist2 view{
    width:100%;
    color:#666;
    font-size:32rpx;
    height:80rpx;
    line-height:80rpx;
    border-bottom:2rpx solid #f5f5f5;
    text-align:left;
}